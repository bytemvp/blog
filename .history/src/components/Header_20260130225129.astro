---
import HeaderLink from './HeaderLink.astro';
import ThemeToggle from './ThemeToggle.astro';
import { SITE_TITLE } from '../consts';
---

<header class="border-b border-gray-light bg-white/80 backdrop-blur dark:border-gray dark:bg-gray-light">
	<nav class="mx-auto flex max-w-5xl flex-col gap-4 px-4 py-4 md:flex-row md:items-center md:justify-between">
		<h2 class="flex items-center text-base font-semibold">
			<a class="text-black transition-colors hover:text-accent dark:text-gray-dark" href="/">
				{SITE_TITLE}
			</a>
		</h2>
		<div class="flex flex-wrap items-center gap-4">
			<HeaderLink href="/" class="text-sm font-medium">Home</HeaderLink>
			<HeaderLink href="/blog" class="text-sm font-medium">Blog</HeaderLink>
			<HeaderLink href="/about" class="text-sm font-medium">About</HeaderLink>
		</div>
		<div class="flex items-center gap-3">
			<ThemeToggle />
			<a
				class="inline-flex items-center text-gray-dark transition-colors hover:text-accent"
				href="https://github.com/bytemvp"
				target="_blank"
			>
				<span class="sr-only">Go to ByteMVP's GitHub repo</span>
				<svg viewBox="0 0 16 16" aria-hidden="true" width="28" height="28"
					><path
						fill="currentColor"
