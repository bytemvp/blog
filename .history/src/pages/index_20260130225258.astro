---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import FormattedDate from "../components/FormattedDate.astro";
import { getCollection } from "astro:content";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";

const posts = (await getCollection("blog")).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
const [featuredPost, ...recentPosts] = posts;
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body>
    <Header />
    <main class="home">
      <section class="hero" aria-labelledby="hero-title">
        <div class="hero-content">
          <p class="eyebrow">Welcome to</p>
          <h1 id="hero-title">{SITE_TITLE}</h1>
          <p class="lead">{SITE_DESCRIPTION}</p>
          <div class="hero-actions">
            <a class="button primary" href="/blog">Explore the blog</a>
            <a class="button ghost" href="/about">About the author</a>
          </div>
        </div>
        <div class="hero-highlight" aria-hidden="true">
          <div class="stat">
            <span class="stat-value">{posts.length}</span>
            <span class="stat-label">Posts published</span>
          </div>
          <div class="stat">
            <span class="stat-value">Weekly</span>
            <span class="stat-label">Fresh updates</span>
          </div>
        </div>
      </section>

      <section class="featured" aria-labelledby="featured-title">
        <div class="section-header">
          <h2 id="featured-title">Featured story</h2>
          <a class="text-link" href="/blog">View all posts</a>
        </div>
        {
          featuredPost && (
            <article class="featured-card">
              <img
                src={featuredPost.data.heroImage}
                alt=""
                width="960"
                height="480"
                loading="lazy"
              />
              <div class="featured-body">
                <p class="meta">
                  <FormattedDate date={featuredPost.data.pubDate} />
                </p>
                <h3>{featuredPost.data.title}</h3>
                <p class="excerpt">{featuredPost.data.description}</p>
                <a class="text-link" href={`/blog/${featuredPost.id}/`}>
                  Read the story
                </a>
              </div>
            </article>
          )
        }
      </section>

      <section class="highlights" aria-labelledby="highlights-title">
        <h2 id="highlights-title">Latest insights</h2>
        <div class="highlight-grid">
          {
            recentPosts.slice(0, 3).map((post) => (
              <article class="highlight-card">
                <p class="meta">
                  <FormattedDate date={post.data.pubDate} />
                </p>
                <h3>{post.data.title}</h3>
                <p class="excerpt">{post.data.description}</p>
                <a class="text-link" href={`/blog/${post.id}/`}>
                  Read more
                </a>
              </article>
            ))
          }
        </div>
      </section>

      <section class="cta" aria-labelledby="cta-title">
        <div>
          <h2 id="cta-title">Stay curious.</h2>
          <p>Explore the full archive and discover new stories every week.</p>
        </div>
        <a class="button primary" href="/blog">Browse all posts</a>
      </section>
    </main>
    <Footer />
  </body>
</html>

<style>
  :global(body) {
    background: linear-gradient(var(--gray-gradient)) no-repeat;
    background-size: 100% 600px;
  }

  .home {
    max-width: 1100px;
    margin: 0 auto;
    padding: 4rem 1.5rem 5rem;
    display: flex;
    flex-direction: column;
    gap: 4rem;
  }

  .hero {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
    gap: 2.5rem;
    align-items: center;
  }

  .hero h1 {
    font-size: clamp(2.5rem, 4vw, 4rem);
    margin-bottom: 0.75rem;
  }

  .eyebrow {
    text-transform: uppercase;
    letter-spacing: 0.12em;
    font-size: 0.75rem;
    color: rgb(var(--gray));
    margin-bottom: 0.75rem;
  }

  .lead {
    font-size: 1.2rem;
    color: rgb(var(--gray-dark));
    max-width: 520px;
  }

  .hero-actions {
    display: flex;
    gap: 1rem;
    margin-top: 1.5rem;
    flex-wrap: wrap;
  }

  .hero-highlight {
    background: white;
    border-radius: 20px;
    padding: 2rem;
    box-shadow: var(--box-shadow);
    display: grid;
    gap: 1.5rem;
  }

  .stat {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .stat-value {
    font-size: 1.8rem;
    font-weight: 700;
    color: rgb(var(--black));
  }

  .stat-label {
    color: rgb(var(--gray));
  }

  .section-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 1.5rem;
  }

  .featured-card {
    display: grid;
    grid-template-columns: minmax(0, 1.2fr) minmax(0, 1fr);
    gap: 2rem;
    background: white;
    border-radius: 20px;
    overflow: hidden;
    box-shadow: var(--box-shadow);
  }

  .featured-card img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .featured-body {
    padding: 2rem;
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .highlight-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
    gap: 1.5rem;
  }

  .highlight-card {
    background: white;
    border-radius: 18px;
    padding: 1.5rem;
    box-shadow: var(--box-shadow);
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .excerpt {
    color: rgb(var(--gray-dark));
    margin: 0;
  }

  .meta {
    color: rgb(var(--gray));
    font-size: 0.9rem;
    margin: 0;
  }

  .cta {
    background: rgb(var(--gray-light));
    border-radius: 24px;
    padding: 2.5rem;
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 2rem;
    flex-wrap: wrap;
  }

  .button {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 0.75rem 1.6rem;
    border-radius: 999px;
    font-weight: 600;
    text-decoration: none;
    border: 1px solid transparent;
    transition:
      transform 0.2s ease,
      box-shadow 0.2s ease;
  }

  .button.primary {
    background: var(--accent);
    color: white;
    box-shadow: 0 12px 24px rgba(var(--gray), 0.25);
  }

  .button.ghost {
    border-color: rgba(var(--gray), 0.3);
    color: rgb(var(--gray-dark));
  }

  .text-link {
    color: var(--accent);
    font-weight: 600;
    text-decoration: none;
  }

  .text-link:hover,
  .button:hover {
    transform: translateY(-1px);
  }

  @media (max-width: 720px) {
    .home {
      padding-top: 2.5rem;
    }

    .featured-card {
      grid-template-columns: 1fr;
    }

    .section-header {
      flex-direction: column;
      align-items: flex-start;
      gap: 0.5rem;
    }

    .cta {
      padding: 2rem;
    }
  }
</style>
